<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity
            name="olml89\MyTheresaTest\Product\Domain\Product"
            table="products"
    >
        <id
                name="sku"
                type="string"
                column="sku"
        >
            <generator strategy="NONE"/>
        </id>
        <field
                name="name"
                type="string"
                column="name"
                length="255"
                nullable="false"
        />
        <field
                name="category"
                type="CategoryType"
                column="category"
                length="50"
                nullable="false"
        />
        <embedded
                name="price"
                class="olml89\MyTheresaTest\Product\Domain\Price\OriginalPrice"
                column="price"
        />
        <one-to-many
                field="discounts"
                target-entity="olml89\MyTheresaTest\Product\Domain\Discount\Discount"
                mapped-by="product"
                orphan-removal="true"
        >
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
