<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity
            name="olml89\MyTheresaTest\Product\Domain\Product"
            table="products"
    >
        <id
                name="sku"
                type="string"
                column="sku"
        >
            <generator strategy="NONE"/>
        </id>
        <field
                name="name"
                type="string"
                column="name"
                length="255"
                nullable="false"
        />
        <field
                name="category"
                type="CategoryType"
                column="category"
                length="50"
                nullable="false"
        />
        <field
                name="price"
                type="integer"
                column="price"
                nullable="false"
        />
    </entity>
</doctrine-mapping>
